{
    "_-x-vim-formatting": " vim: set ft=javascript ts=4 sw=4 et : ",

    "name":        "vend/doxport",
    "type":        "library",
    "description": "Doctrine relational walk export/delete tool",
    "keywords":    ["doctrine2", "export"],
    "license":     "GPL3",

    "authors": [
        {
            "name":  "Vend Devteam",
            "email": "devteam@vendhq.com"
        }
    ],

    "autoload": {
        "psr-0": {
            "Doxport\\": "src/"
        }
    },

    "bin": ["doxport"],

    "require": {
        "php":                          ">=5.4.0",
        "ext-mbstring":                       "*",

        "clue/graph":                   "0.7.*",
        "doctrine/orm":                 "2.4.*",
        "symfony/console":              "2.4.*",
        "symfony/filesystem":           "2.4.*",
        "psr/log":                      "1.0.*"
    },

    "require-dev": {
        "symfony/event-dispatcher":  ">=2.1",
        "squizlabs/php_codesniffer": "1.*",
        "phpunit/phpunit":           "3.7.*"
    },

    "suggest": {
        "ext-eio": "Allows the output files to be sync'd"
    },

    "config": {
        "bin-dir": "bin"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
